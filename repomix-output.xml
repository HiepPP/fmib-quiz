        console.log("âœ… Questions loaded:", loadedQuestions);
        console.log("ðŸ“Š Questions count:", loadedQuestions.length);
        setQuestions(loadedQuestions);
        console.log("ðŸŽ¯ Questions state set");
      } catch (error) {
        console.error("âŒ Failed to load questions:", error);
        setSaveError(
          "Failed to load questions. Please try refreshing the page.",
        );
      } finally {
        console.log("ðŸ Loading finished, setting isLoading to false");
        setIsLoading(false);
      }
    };

    loadQuestions();
